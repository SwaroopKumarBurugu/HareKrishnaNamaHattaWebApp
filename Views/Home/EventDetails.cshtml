@model HareKrishnaNamaHattaWebApp.Models.Event
@{
    ViewData["Title"] = Model.Title;
}
<style>
    .event-image {
        width: 100%; /* Full width of container */
        max-width: 600px; /* Optional: limits image size */
        height: auto; /* Maintains aspect ratio */
        max-height: 400px; /* Optional: caps height for visual consistency */
        object-fit: cover; /* Crops excess area if needed */
        object-position: center; /* Centers the visible area */
    }
</style>

<div class="container mt-4">
    <h2 class="text-primary">@Model.Title</h2>
    <div class="row mt-3">
        <div class="col-md-4">
            <img src="@Url.Content("~/uploads/event-logos/" + (Model.ImagePath ?? "default.jpg"))" class="img-fluid rounded mt-3 event-image" alt="@Model.Title" />
        </div>
        <div class="col-md-8">
            <p><strong>Date:</strong> @Model.Date.ToString("dd MMM yyyy HH:mm tt")</p>
            @if (Model.EndDate > Model.Date)
            {
                <p><strong>End Date:</strong> @Model.EndDate.Value.ToString("dd MMM yyyy HH:mm tt")</p>
            }
            <p><strong>Location:</strong> @Model.Location</p>
            <p class="mt-3">@Model.Description</p>
            <a href="@Url.Action("Events", "Home")" class="btn btn-outline-secondary mt-3">← Back to Events</a>
        </div>
    </div>
</div>
