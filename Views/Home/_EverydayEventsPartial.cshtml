@model List<HareKrishnaNamaHattaWebApp.Models.Event>

@if (Model != null && Model.Any())
{
    <ul class="list-group mb-3">
        @foreach (var evt in Model)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <div>
                        <strong>Event: </strong>@evt.Title
                        <small class="text-black ms-2"><strong>Location:</strong> @evt.Location</small>
                    </div>
                    <div class="mt-2 mt-md-0">
                        <a href="@Url.Action("EventDetails", "Home", new { id = evt.Id })" class="btn btn-sm btn-outline-primary">View Details</a>
                    </div>
                </div>
                <div class="mt-2">
                    <small>@evt.Description</small>
                </div>
            </li>
        }
    </ul>
}
else
{
    <p>No everyday events available.</p>
}
