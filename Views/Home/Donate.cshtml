@model HareKrishnaNamaHattaWebApp.Models.Donation

@{
    ViewData["Title"] = "Donate";
}

<!-- Donation Form -->
<div class="card shadow-lg mt-4 border-primary">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Make an Online Donation</h5>
    </div>
    <div class="card-body">
        <form asp-action="Donate" asp-controller="Home" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="DonorName" class="form-label fw-semibold text-dark">Your Name <span class="text-danger">*</span></label>
                <input asp-for="DonorName" class="form-control border-success shadow-sm" placeholder="Enter your full name" />
                <span asp-validation-for="DonorName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold text-dark">Email Address <span class="text-danger">*</span></label>
                <input asp-for="Email" class="form-control border-success shadow-sm" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Amount" class="form-label fw-semibold text-dark">Donation Amount (INR) <span class="text-danger">*</span></label>
                <input asp-for="Amount" class="form-control border-success shadow-sm" placeholder="E.g. 500, 1000, etc." />
                <span asp-validation-for="Amount" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Message" class="form-label fw-semibold text-dark">Message</label>
                <input asp-for="Message" class="form-control border-success shadow-sm" placeholder="Enter your message" />
                <span asp-validation-for="Message" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-success px-4">Donate Now</button>
        </form>
    </div>
</div>

<div class="container mt-4 mb-5">
    <h2 class="text-success mb-4">Support Our Temple – Donate Now</h2>

    <p class="lead">
        Your kind donations help maintain temple services, support daily prasadam distribution,
        festivals, spiritual education, and more. Every contribution counts.
    </p>

    <div class="row mt-4">
        <!-- Bank Transfer Info -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Bank Transfer (India)</h5>
                </div>
                <div class="card-body">
                    <p><strong>Bank Name:</strong> Federal Bank </p>
                    <p><strong>Account Name:</strong> M/S Sri NeelaChala Dham</p>
                    <p><strong>Account Number:</strong> <code>11300200267681</code></p>
                    <p><strong>IFSC Code:</strong> <code>FDRL0001130</code></p>
                    <p><strong>Branch:</strong> Kollam, Kerala 691522 </p>
                </div>
            </div>
        </div>

        <!-- QR Code / UPI or Alternate -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Donate via UPI / QR Code</h5>
                </div>
                <div class="card-body text-center">
                    <img src="/images/qr-mock.png" class="img-fluid mb-3 rounded shadow-sm" alt="UPI QR Code" style="max-width: 300px;" />
                    <p><strong>UPI ID:</strong> <code>krishna.donation@sbi</code></p>
                    <p class="text-muted">Scan the code above using any UPI app to contribute instantly.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Thank You Note -->
    <div class="alert alert-info mt-4" role="alert">
        <strong>Note:</strong> For donation receipts or inquiries, please email us at
        <a href="https://mail.google.com/">sanoopkumars@gmail.com</a> with your transaction details.
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}