@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="spiritual-background">
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-4">
        <a class="navbar-brand text-dark" asp-controller="Admin" asp-action="Dashboard">Admin Panel</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item text-dark">
                    <a asp-controller="Admin" asp-action="Donations" class="nav-link">Donations</a>
                </li>
                <li class="nav-item text-dark">
                    <a asp-controller="Admin" asp-action="ContactMessages" class="nav-link">Contact Messages</a>
                </li>
                <li class="nav-item text-dark">
                    <a asp-controller="Admin" asp-action="Events" class="nav-link">Events</a>
                </li>
                <li class="nav-item text-dark">
                    <a asp-controller="Admin" asp-action="VolunteerDevotees" class="nav-link">Volunteer Devotees</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
