@model List<HareKrishnaNamaHattaWebApp.Models.Event>;

@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>Event Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var evt in Model)
            {
                <tr>
                    <td>@evt.Title</td>
                    <td>@evt.Description</td>
                    <td>@(evt.Date.ToString("dd MMM yyyy HH:mm tt") ?? "-")</td>
                    <td>@evt.EventType</td>
                    <td>
                        <a asp-action="EditEvent" asp-route-id="@evt.Id" class="btn btn-primary btn-sm">Edit</a>
                        <form asp-action="DeleteEvent" asp-route-id="@evt.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this event?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No events found.</p>
}
